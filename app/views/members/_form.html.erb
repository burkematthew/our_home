<%= form_with(model: @member) do |form| %>
  <%= render(Forms::ErrorComponent.new(errors: @member.errors, label: "member")) %>

  <div class="flex flex-wrap -mx-3 mb-12">
    <div class="field px-3">
      <%= render(Forms::LabelComponent.new(label: "First Name")) %>
      <%= form.text_field :first_name, class: "appearance-none block w-full border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", placeholder: "Enter the first name"  %>
    </div>

    <div class="field px-3">
      <%= render(Forms::LabelComponent.new(label: "Middle Name")) %>
      <%= form.text_field :middle_name, class: "appearance-none block w-full border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", placeholder: "Enter the middle name"  %>
    </div>

    <div class="field px-3">
      <%= render(Forms::LabelComponent.new(label: "Last Name")) %>
      <%= form.text_field :last_name, class: "appearance-none block w-full border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", placeholder: "Enter the last name"  %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-12">  
    <div class="field px-3">
      <%= render(Forms::LabelComponent.new(label: "Birthday")) %>
      <input name="member[birthdate]" class="appearance-none block w-full border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="date" value="<%= @member.birthdate %>"/>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>