<div class="flex-col">
  <div class="mb-5">
    <%= render(Forms::HeaderComponent.new(text: "Budget Categories")) %>
  </div>
  <div class="mt-5 mb-5">
    <%= link_to "+ New", new_budget_category_path, class: "bg-yellow-200 text-black-300 px-4 py-2 border rounded-md hover:border-black" %>
  </div>
  <% if @categories_exist %>
    <table class="divide-y divide-gray-300 ">
      <%= render(Tables::HeaderComponent.new(headers: ["ID", "Description"], include_actions: true)) %>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="whitespace-nowrap">
            <td class="px-6 py-4 text-sm text-gray-500"><%= category.id %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= category.description %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= link_to "View", category, class:"px-4 py-1 text-sm text-blue-600 bg-blue-200 rounded-full" %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= link_to "Edit", edit_budget_category_path(category), class:"px-4 py-1 text-sm text-blue-600 bg-blue-200 rounded-full" %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= link_to "Delete", category, method: :delete, data: { confirm: 'Are you sure?' }, class:"px-4 py-1 text-sm text-red-600 bg-red-200 rounded-full" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2 class="mb-4 text-xl font-black">No Current Budget Categories</h2>
  <% end %>
