<div class="flex-col">
  <div class="mb-5">
    <%= render(Forms::HeaderComponent.new(text: "Budgets")) %>
  </div>
  <div class="mt-5 mb-5">
    <%= link_to "+ New", new_budget_path, class: "bg-yellow-200 text-black-300 px-4 py-2 border rounded-md hover:border-black" %>
  </div>
  <% if @budgets_exist %>
    <table class="divide-y divide-gray-300 ">
      <%= render(Tables::HeaderComponent.new(headers: ["Month", "Cash Flow Type", "Description", "Amount"], include_actions: true)) %>
      <tbody>
        <% @budgets.each do |budget| %>
          <tr class="whitespace-nowrap">
            <td class="px-6 py-4 text-sm text-gray-500"><%= budget.month.humanize %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= budget.cash_flow_type %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= budget.description %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= budget.amount %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= link_to "View", budget, class:"px-4 py-1 text-sm text-blue-600 bg-blue-200 rounded-full" %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= link_to "Edit", edit_budget_path(budget), class:"px-4 py-1 text-sm text-blue-600 bg-blue-200 rounded-full" %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= link_to "Delete", budget, method: :delete, data: { confirm: 'Are you sure?' }, class:"px-4 py-1 text-sm text-red-600 bg-red-200 rounded-full" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2 class="mb-4 text-xl font-black">No Current Budgets</h2>
  <% end %>
<div>
