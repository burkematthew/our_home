<%= form_with(model: @member) do |form| %>
  <%= render(Forms::ErrorComponent.new(errors: @budget.errors, label: "budget")) %>

  <div class="flex flex-wrap -mx-3 mb-12">
    <div class="field px-3">
      <%= render(Forms::LabelComponent.new(label: "Description")) %>
      <%= form.text_field :description, class: "appearance-none block w-full border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", placeholder: "Enter the description"  %>
    </div>
  </div>

  <%= render(Forms::LabelComponent.new(label: "Category")) %>
  <%= form.select :budget_category_id, budget_category_options_for_select, {prompt: 'Select a Budget Category'}, class: "form-select appearance-none block w-full border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
  
  <div class="actions">
    <%= form.submit class: "bg-yellow-200 text-black-300 px-4 py-2 border rounded-md hover:border-black" %>
  </div>
<% end %>